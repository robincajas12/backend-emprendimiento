<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">

    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.project007.entity.Usuario</class>
        <class>com.project007.entity.Evento</class>
        <class>com.project007.entity.Ubicacion</class>
        <class>com.project007.entity.TipoEntrada</class>
        <class>com.project007.entity.Entrada</class>
        <class>com.project007.entity.Pedido</class>
        <class>com.project007.entity.Transaccion</class>
        <class>com.project007.entity.Permiso</class>

        <!-- Opcional: Hibernate detecta entidades automÃ¡ticamente -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- JDBC -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://127.0.0.1:5432/project007"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgres"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>

    </persistence-unit>
</persistence>
